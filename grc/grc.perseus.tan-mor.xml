   <body>
      <for-lang>grc</for-lang>
      <!-- 1st category -->
      <rule>
         <report>^c[^ -]+A conjunction has no other inflectional
         properties.</report>
      </rule>
      <rule>
         <report>0.8^eCode e has been deprecated. It was used in some cases
         for ὦ voc., to be distinguished from ὦ as exclamation </report>
      </rule>
      <rule>
         <report>^g [^-m]+A particle is either qualified as modal (g m) or has no
         other inflectional properties.</report>
      </rule>
      <rule>
         <report>^i[^ -]+An interjection has no other inflectional
         properties.</report>
      </rule>
      <rule>
         <report>^r[^ -]+A preposition has no other inflectional
         properties.</report>
      </rule>
      <rule>
         <report>^y[^ -]+An acronym has no other inflectional properties.</report>
      </rule>
      <!-- 2nd category -->
      <rule>
         <report>^[^dp] iThe category interrogative may be applied only to
         determiners and pronouns.</report>
      </rule>
      <rule>
         <report>0.8^. vCode v for verbal adjective has been deprecated. </report>
      </rule>
