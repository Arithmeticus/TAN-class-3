   <body>
      <!-- 1st category -->
      <rule m-matches="^c">
         <report m-has-how-many-features="2-10">A conjunction has no other inflectional properties.</report>
      </rule>
      <rule m-matches="^g">
         <report m-matches="^g [^-m]">A particle is either qualified as modal (g m) or has no other inflectional
            properties.</report>
      </rule>
      <rule m-matches="^i">
         <report m-matches="^i [^ -]">An interjection has no other inflectional properties.</report>
      </rule>
      <rule m-matches="^r">
         <report m-matches="^r [^ -]">A preposition has no other inflectional properties.</report>
      </rule>
      <rule m-matches="^y">
         <report m-matches="^y [^ -]">An acronym has no other inflectional properties.</report>
      </rule>
      <!-- 2nd category -->
      <rule m-matches="^. i">
         <assert m-matches="^[dp]">An interrogative must be either a determiner (d) or a
            pronoun (p).</assert>
      </rule>
      <rule m-matches="^. v">
         <report>v for verbal adjective has been deprecated. </report>
      </rule>
