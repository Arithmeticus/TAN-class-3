<TAN-mor xmlns="tag:textalign.net,2015:ns"
   TAN-version="1 dev"
   id="tag:kalvesmaki.com,2014:tan-r-mor:lat:perseus">
   <head>
      <name>Perseus rules for Latin morphology</name>
      <desc>Grammatical categories for classical Latin</desc>
      <master-location href="https://raw.githubusercontent.com/Arithmeticus/TAN-lexico-morphology/master/TAN-mor/lat.kalvesmaki.com%2C2014.1.xml"/>
      <rights-excluding-sources rights-holder="kalvesmaki">
         <IRI>http://creativecommons.org/licenses/by/4.0/deed.en_US</IRI>
         <name>Creative Commons Attribution 4.0 International License</name>
         <name>This license is granted independent of rights and licenses associated with the
            source. </name>
      </rights-excluding-sources>
      <source xml:id="perseus">
         <IRI>urn:uuid:dc90589c-967c-4d42-b642-e3be556fc190</IRI>
         <name>Perseus codes for Latin</name>
         <desc>Perseus's standard code for Latin morphology (a string of 10 chars.),
            found at http://perseus.uchicago.edu/about.html (accessed 2013-11-18)</desc>
      </source>
      <declarations ed-when="2016-05-03" ed-who="kalvesmaki"/>
      
      <agent xml:id="kalvesmaki" roles="editor">
         <IRI>http://viaf.org/viaf/299582703</IRI>
         <IRI>tag:kalvesmaki.com,2014:self</IRI>
         <name>Joel Kalvesmaki</name>
      </agent>
      <role xml:id="editor">
         <IRI>http://schema.org/editor</IRI>
         <name>Editor</name>
      </role>
      <change when="2015-03-31" who="kalvesmaki">Converted features to standard OLiA ones.</change>
      <change who="kalvesmaki" when="2015-05-04">Converted IRI scheme to OLiA.</change>
      <change when="2013-11-18" who="kalvesmaki">Adjusted uuid-date name. Built new roles
         elements.</change>
      <change when="2013-11-16" who="kalvesmaki">First draft started.</change>
      <comment when="2013-11-16" who="kalvesmaki">This was written to replicate the syntax and rules
         of the 10-character codes developed by Perseus. </comment>
   </head>
   <body>
      <for-lang>lat</for-lang>
      <!-- 1st category -->
      <report matches-m="^c[^ -]+">A conjunction has no other inflectional
         properties.</report>
      <report cert="high" matches-m="^e">Code e has been deprecated. It was used in some cases
         for ὦ voc., to be distinguished from ὦ as exclamation </report>
      <report matches-m="^g [^-m]+">A particle is either qualified as modal (g m) or has no
         other inflectional properties.</report>
      <report matches-m="^i[^ -]+">An interjection has no other inflectional
         properties.</report>
      <report matches-m="^r[^ -]+">A preposition has no other inflectional
         properties.</report>
      <report matches-m="^y[^ -]+">An acronym has no other inflectional properties.</report>
      <!-- 2nd category -->
      <report matches-m="^[^dp] i">The category interrogative may be applied only to
         determiners and pronouns.</report>
      <report cert="high" matches-m="^. v">Code v for verbal adjective has been deprecated. </report>
      <category>
         <feature which="morphosyntactic category"/>
         <feature which="adjective" code="a"/>
         <feature which="conjunction" code="c"/>
         <feature which="adverb" code="d"/>
         <feature which="vocative expression" code="e"/>
         <feature which="unique" code="g"/>
         <feature which="interjection" code="i"/>
         <feature which="number cardinal" code="m"/>
         <feature which="noun" code="n"/>
         <feature which="pronoun" code="p"/>
         <feature which="preposition" code="r"/>
         <feature which="verb" code="v"/>
         <feature which="acronym" code="y"/>
      </category>
      <category>
         <feature>
            <IRI>tag:textalign.net,2015:morphology:category:morphosyntactic-secondary</IRI>
            <name>secondary morphosyntactic category</name>
         </feature>
         <feature which="article" code="a"/>
         <!--<option feature="reciprocal" code="c"/>-->
         <feature which="demonstrative pronoun" code="d"/>
         <feature which="proper noun" code="e"/>
         <feature code="i">
            <IRI>tag:textalign.net,2015:feature:grc:perseus:interrogative</IRI>
            <name>interrogative</name>
            <desc>To be applied only to determiners and pronouns, quantifiers
               http://purl.org/olia/olia.owl#InterrogativeDeterminer
               http://purl.org/olia/olia.owl#InterrogativePronoun </desc>
         </feature>
         <feature which="pronoun reflexive" code="k"/>
         <!--<option feature="modal" code="m"/>-->
         <feature which="pronoun personal" code="p"/>
         <feature which="pronoun relative" code="r"/>
         <feature which="pronoun possessive" code="s"/>
         <!--<option feature="verbal" code="v"/>-->
         <feature which="pronoun indefinite" code="x"/>
      </category>
      <category>
         <feature which="feature person"/>
         <feature which="first" code="1"/>
         <feature which="second" code="2"/>
         <feature which="third" code="3"/>
      </category>
      <category>
         <feature which="feature number"/>
         <!--<option feature="dual" code="d"/>-->
         <feature which="plural" code="p"/>
         <feature which="singular" code="s"/>
      </category>
      <category>
         <feature which="feature tense"/>
         <!--<option feature="aorist" code="a"/>-->
         <feature which="future" code="f"/>
         <feature which="imperfect" code="i"/>
         <feature which="tense pluperfect" code="l"/>
         <feature which="present" code="p"/>
         <feature which="perfect" code="r"/>
         <feature which="perfect future" code="t"/>
      </category>
      <category>
         <feature which="feature mood"/>
         <feature which="gerund" code="d"/>
         <feature code="g">
            <IRI>tag:textalign.net,2015:feature:lat:perseus:gerundive</IRI>
            <name>gerundive</name>
         </feature>
         <feature which="mood indicative" code="i"/>
         <feature which="verb imperative" code="m"/>
         <feature which="infinitive" code="n"/>
         <!--<option feature="optative" code="o"/>-->
         <feature which="participle" code="p"/>
         <feature which="modality subjunctive" code="s"/>
         <feature which="supine" code="u"/>
      </category>
      <category>
         <feature>
            <IRI>http://dbpedia.org/resource/VoiceFeature</IRI>
            <name>voice</name>
         </feature>
         <feature which="voice active" code="a"/>
         <feature code="e">
            <IRI>tag:textalign.net,2015:feature:grc:perseus:voice-middlepassive</IRI>
            <name>middle-passive</name>
            <desc>Verbal form that ambiguously weds middle and passive, the union of
               http://purl.org/olia/olia.owl#MiddleVoice and
               http://purl.org/olia/olia.owl#PassiveVoice </desc>
         </feature>
         <!--<option feature="middle" code="m"/>-->
         <feature which="voice passive" code="p"/>
      </category>
      <category>
         <feature>
            <IRI>http://dbpedia.org/resource/GenderFeature</IRI>
            <name>gender</name>
         </feature>
         <feature which="gender common" code="c"/>
         <feature which="feminine" code="f"/>
         <feature which="masculine" code="m"/>
         <feature which="neuter" code="n"/>
      </category>
      <category>
         <feature>
            <IRI>http://dbpedia.org/resource/CaseFeature</IRI>
            <name>case</name>
         </feature>
         <!-- fm used but not defined -->
         <feature which="ablative case" code="b"/>
         <feature which="accusative" code="a"/>
         <feature which="case dative" code="d"/>
         <feature which="case genitive" code="g"/>
         <feature which="nominative" code="n"/>
         <feature which="case vocative" code="v"/>
      </category>
      <category>
         <feature>
            <IRI>http://dbpedia.org/resource/DegreeFeature</IRI>
            <name>degree</name>
         </feature>
         <feature which="comparative" code="c"/>
         <feature which="superlative" code="s"/>
      </category>
   </body>
</TAN-mor>
