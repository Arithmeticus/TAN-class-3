<TAN-mor xmlns="tag:textalign.net,2015:ns" TAN-version="1" id="tag:kalvesmaki.com,2014:tan-r-mor:grc:perseus">
   <head>
      <name>Perseus rules for Greek morphology</name>
      <desc xml:lang="eng">Model of a grammar code to be used in a TAN declaration concerning
         grammar</desc>
      <master-location href="https://raw.githubusercontent.com/Arithmeticus/TAN-lexico-morphology/master/TAN-mor/grc.kalvesmaki.com%2C2014.1.xml"/>
      <rights-excluding-sources rights-holder="kalvesmaki">
         <IRI>http://creativecommons.org/licenses/by/4.0/deed.en_US</IRI>
         <name>Creative Commons Attribution 4.0 International License</name>
         <name>This license is granted independent of rights and licenses associated with the
            source. </name>
      </rights-excluding-sources>
      <source xml:id="perseus">
         <IRI>urn:uuid:147d8040-4ca9-11e3-848f-0002a5d5c51b:2013-11-18</IRI>
         <name>Perseus codes</name>
         <desc xml:lang="eng">Perseus's standard code for Greek morphology (a string of 10 chars.),
            found at http://perseus.uchicago.edu/about.html (accessed 2013-11-18)</desc>
      </source>
      <declarations ed-when="2016-03-31" ed-who="kalvesmaki">
         <for-lang>grc</for-lang>
         <!-- MAJOR CATEGORIES -->
         <feature xml:id="majorcat" which="morphosyntactic category"/>
         <feature xml:id="minorcat">
            <IRI>tag:textalign.net,2015:morphology:category:morphosyntactic-secondary</IRI>
            <name>secondary morphosyntactic category</name>
         </feature>
         <feature xml:id="person" which="feature person"/>
         <feature xml:id="number" which="feature number"/>
         <feature xml:id="tense" which="feature tense"/>
         <feature xml:id="mood" which="feature mood"/>
         <feature xml:id="voice">
            <IRI>http://dbpedia.org/resource/VoiceFeature</IRI>
            <name>voice</name>
         </feature>
         <feature xml:id="gender">
            <IRI>http://dbpedia.org/resource/GenderFeature</IRI>
            <name>gender</name>
         </feature>
         <feature xml:id="case">
            <IRI>http://dbpedia.org/resource/CaseFeature</IRI>
            <name>case</name>
         </feature>
         <feature xml:id="degree">
            <IRI>http://dbpedia.org/resource/DegreeFeature</IRI>
            <name>degree</name>
         </feature>
         <feature xml:id="adjective" which="adjective"/>
         <feature xml:id="conjunction" which="conjunction"/>
         <feature xml:id="adverb" which="adverb"/>
         <feature xml:id="ω">
            <IRI>tag:textalign.net,2015:feature:ωvocative</IRI>
            <name>ω vocative</name>
         </feature>
         <feature xml:id="particle" which="unique"/>
         <feature xml:id="interjection" which="interjection"/>
         <feature xml:id="cardinal" which="number cardinal"/>
         <feature xml:id="noun" which="noun"/>
         <feature xml:id="pronoun" which="pronoun"/>
         <feature xml:id="preposition" which="preposition"/>
         <feature xml:id="verb" which="verb"/>
         <feature xml:id="acronym" which="acronym"/>
         <feature xml:id="article" which="article"/>
         <feature xml:id="reciprocal" which="pronoun reciprocal"/>
         <feature xml:id="demonstrative" which="demonstrative pronoun"/>
         <feature xml:id="proper" which="proper noun"/>
         <feature xml:id="interrogative">
            <IRI>tag:textalign.net,2015:feature:grc:perseus:interrogative</IRI>
            <name>interrogative</name>
            <desc>To be applied only to determiners and pronouns, quantifiers
               http://purl.org/olia/olia.owl#InterrogativeDeterminer
               http://purl.org/olia/olia.owl#InterrogativePronoun </desc>
         </feature>
         <feature xml:id="reflexive" which="pronoun reflexive"/>
         <feature xml:id="modal" which="particle modal"/>
         <feature xml:id="personal" which="pronoun personal"/>
         <feature xml:id="relative" which="pronoun relative"/>
         <feature xml:id="possessive" which="pronoun possessive"/>
         <feature xml:id="verbal">
            <IRI>tag:textalign.net,2015:feature:grc:perseus:adjective-verbal</IRI>
            <name>verbal</name>
            <comment when="2015-05-05" who="kalvesmaki">Deprecated option</comment>
         </feature>
         <feature xml:id="indefinite" which="pronoun indefinite"/>
         <feature xml:id="first" which="first"/>
         <feature xml:id="second" which="second"/>
         <feature xml:id="third" which="third"/>
         <feature xml:id="dual" which="dual"/>
         <feature xml:id="plural" which="plural"/>
         <feature xml:id="singular" which="singular"/>
         <feature xml:id="aorist" which="aorist"/>
         <feature xml:id="future" which="future"/>
         <feature xml:id="imperfect" which="imperfect"/>
         <feature xml:id="pluperfect" which="tense pluperfect"/>
         <feature xml:id="present" which="present"/>
         <feature xml:id="perfect" which="perfect"/>
         <feature xml:id="future-perfect" which="perfect future"/>
         <feature xml:id="indicative" which="mood indicative"/>
         <feature xml:id="imperative" which="verb imperative"/>
         <feature xml:id="infinitive" which="infinitive"/>
         <feature xml:id="optative" which="mood optative"/>
         <feature xml:id="participle" which="participle"/>
         <feature xml:id="subjunctive" which="modality subjunctive"/>
         <feature xml:id="active" which="voice active"/>
         <feature xml:id="middle-passive">
            <IRI>tag:textalign.net,2015:feature:grc:perseus:voice-middlepassive</IRI>
            <name>middle-passive</name>
            <desc>Verbal form that ambiguously weds middle and passive, the union of
               http://purl.org/olia/olia.owl#MiddleVoice and
               http://purl.org/olia/olia.owl#PassiveVoice </desc>
         </feature>
         <feature xml:id="middle" which="voice middle"/>
         <feature xml:id="passive" which="voice passive"/>
         <feature xml:id="common" which="gender common"/>
         <feature xml:id="feminine" which="feminine"/>
         <feature xml:id="masculine" which="masculine"/>
         <feature xml:id="neuter" which="neuter"/>
         <feature xml:id="accusative" which="accusative"/>
         <feature xml:id="dative" which="case dative"/>
         <feature xml:id="genitive" which="case genitive"/>
         <feature xml:id="nominative" which="nominative"/>
         <feature xml:id="vocative" which="case vocative"/>
         <feature xml:id="comparative" which="comparative"/>
         <feature xml:id="superlative" which="superlative"/>
      </declarations>
      
      <agent xml:id="kalvesmaki" roles="editor">
         <IRI>http://viaf.org/viaf/299582703</IRI>
         <IRI>tag:kalvesmaki.com,2014:self</IRI>
         <name>Joel Kalvesmaki</name>
      </agent>
      <role xml:id="editor">
         <IRI>http://schema.org/editor</IRI>
         <name>Editor</name>
      </role>
      <change when="2015-03-31" who="kalvesmaki">Converted features to standard OLiA ones.</change>
      <change who="kalvesmaki" when="2015-05-04">Converted IRI scheme to OLiA.</change>
      <change when="2013-11-18" who="kalvesmaki">Adjusted uuid-date name. Built new roles
         elements.</change>
      <change when="2013-11-16" who="kalvesmaki">First draft started.</change>
      <comment when="2013-11-16" who="kalvesmaki">This was written to replicate the syntax and rules
         of the 10-character codes developed by Perseus. </comment>
   </head>
   <body>
      <!-- 1st category -->
      <report code-regex-test="^c[^ -]+">A conjunction has no other inflectional
         properties.</report>
      <report cert="high" code-regex-test="^e">Code e has been deprecated. It was used in some cases
         for ὦ voc., to be distinguished from ὦ as exclamation </report>
      <report code-regex-test="^g [^-m]+">A particle is either qualified as modal (g m) or has no
         other inflectional properties.</report>
      <report code-regex-test="^i[^ -]+">An interjection has no other inflectional
         properties.</report>
      <report code-regex-test="^r[^ -]+">A preposition has no other inflectional
         properties.</report>
      <report code-regex-test="^y[^ -]+">An acronym has no other inflectional properties.</report>
      <!-- 2nd category -->
      <report code-regex-test="^[^dp] i">The category interrogative may be applied only to
         determiners and pronouns.</report>
      <report cert="high" code-regex-test="^. v">Code v for verbal adjective has been deprecated. </report>
      <category feature="majorcat">
         <option feature="adjective" code="a"/>
         <option feature="conjunction" code="c"/>
         <option feature="adverb" code="d"/>
         <option feature="ω" code="e"/>
         <option feature="particle" code="g"/>
         <option feature="interjection" code="i"/>
         <option feature="cardinal" code="m" ed-when="2015-03-10" ed-who="kalvesmaki"/>
         <option feature="noun" code="n"/>
         <option feature="pronoun" code="p"/>
         <option feature="preposition" code="r"/>
         <option feature="verb" code="v"/>
         <option feature="acronym" code="y"/>
      </category>
      <category feature="minorcat">
         <option feature="article" code="a"/>
         <option feature="reciprocal" code="c"/>
         <option feature="demonstrative" code="d"/>
         <option feature="proper" code="e"/>
         <option feature="interrogative" code="i"/>
         <option feature="reflexive" code="k"/>
         <option feature="modal" code="m"/>
         <option feature="personal" code="p"/>
         <option feature="relative" code="r"/>
         <option feature="possessive" code="s"/>
         <option feature="verbal" code="v"/>
         <option feature="indefinite" code="x"/>
      </category>
      <category feature="person">
         <option feature="first" code="1"/>
         <option feature="second" code="2"/>
         <option feature="third" code="3"/>
      </category>
      <category feature="number">
         <option feature="dual" code="d"/>
         <option feature="plural" code="p"/>
         <option feature="singular" code="s"/>
      </category>
      <category feature="tense">
         <option feature="aorist" code="a"/>
         <option feature="future" code="f"/>
         <option feature="imperfect" code="i"/>
         <option feature="pluperfect" code="l"/>
         <option feature="present" code="p"/>
         <option feature="perfect" code="r"/>
         <option feature="future-perfect" code="t"/>
      </category>
      <category feature="mood">
         <option feature="indicative" code="i"/>
         <option feature="imperative" code="m"/>
         <option feature="infinitive" code="n"/>
         <option feature="optative" code="o"/>
         <option feature="participle" code="p"/>
         <option feature="subjunctive" code="s"/>
      </category>
      <category feature="voice">
         <option feature="active" code="a"/>
         <option feature="middle-passive" code="e"/>
         <option feature="middle" code="m"/>
         <option feature="passive" code="p"/>
      </category>
      <category feature="gender">
         <option feature="common" code="c"/>
         <option feature="feminine" code="f"/>
         <option feature="masculine" code="m"/>
         <option feature="neuter" code="n"/>
      </category>
      <category feature="case">
         <option feature="accusative" code="a"/>
         <option feature="dative" code="d"/>
         <option feature="genitive" code="g"/>
         <option feature="nominative" code="n"/>
         <option feature="vocative" code="v"/>
      </category>
      <category feature="degree">
         <option feature="comparative" code="c"/>
         <option feature="superlative" code="s"/>
      </category>
   </body>
</TAN-mor>